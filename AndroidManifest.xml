<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <application
        android:allowBackup="true"
        android:icon="@drawable/santa_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
                  android:launchMode="singleInstance">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PersonDetailsActivity" />
        <activity android:name=".AddPersonActivity" />
        <activity android:name=".SearchPersonActivity" />
        <activity android:name=".EditPersonActivity" />
        <activity android:name=".DialogSearch" />
        <activity android:name=".DialogDelete" />
        <activity android:name=".DialogEdit"></activity>
    </application>
</manifest>